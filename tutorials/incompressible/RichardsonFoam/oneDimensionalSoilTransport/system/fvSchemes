FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSchemes;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

ddtSchemes
{
    default         backward;
}

gradSchemes
{
    default         Gauss linear;

}

divSchemes
{
    default         none;
}

laplacianSchemes
{
    default         none;

laplacian(Krel,psi) Gauss linear corrected;
}

interpolationSchemes
{
    default         Gauss vanLeer;
}

snGradSchemes
{
    default         Gauss vanLeer;
}

fluxRequired
{
    default         yes;
    U;
}


