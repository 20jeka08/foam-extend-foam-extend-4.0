FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];


internalField   uniform 100;

boundaryField
{
    inlet           
    {
        type            fixedValue;
        value           uniform 500;
    }

    outlet          
    {
        type            fixedValue;
        value           uniform 100;
    }

    wallProlongation
    {
        type            zeroGradient;
    }

    wallDiffuser
    {
        type            zeroGradient;
    }

    statSwirlWallB_C
    {
        type            zeroGradient;
    }

    rotSwirlWallA_BB
    {
        type            zeroGradient;
    }

    B_UPSTREAM
    {
        type            ggi;
    }

    B_DOWNSTREAM
    {
        type            ggi;
    }
}

